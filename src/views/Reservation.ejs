  <div class="container">

    <h1 class="text-center mt-5"></h1>
    <div id="carouselExampleControls" class="carousel slide mt-5" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/utilites/imagens-hotel/Quarto Individual/Quarto-Individual1.jpg" class="d-block w-100" alt="Room 1">
        </div>
        <div class="carousel-item">
          <img src="/utilites/imagens-hotel/Quarto Casal/Quarto-Casal1.jpg" class="d-block w-100" alt="Room 2">
